---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Resume" sideBarActiveItemID="resume">
  <div class="max-w-7xl mx-auto px-8 py-8">
    <!-- PDF Viewer -->
    <div class="w-full">
      <iframe
        src="/resume/seunghoc_cv.pdf#toolbar=1&navpanes=0&scrollbar=1&view=FitH"
        width="100%"
        height="800"
        style="border: 1px solid #e5e5e5; border-radius: 8px;"
        title="seunghoc Resume"
        loading="eager"
      ></iframe>
    </div>

    <!-- 브라우저 호환성 안내 -->
    <div class="mt-3 text-center">
      <p class="text-xs text-gray-400">
        PDF 뷰어가 작동하지 않는 경우 
        <a href="/resume/seunghoc_cv.pdf" target="_blank" class="text-gray-600 hover:text-gray-900 underline">
          다운로드
        </a>
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  a {
    color: #374151;
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
    color: #111827;
  }
</style>
